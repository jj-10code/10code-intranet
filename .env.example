# ============================================================================
# 10CODE INTRANET - CONFIGURACIÓN DE ENTORNO
# ============================================================================
# Copia este archivo a .env y personaliza los valores según tu entorno
# cp .env.example .env

# ============================================================================
# DJANGO CORE
# ============================================================================
DJANGO_SETTINGS_MODULE=config.settings.development
DEBUG=True

# ============================================================================
# DATABASE - PostgreSQL
# ============================================================================
DATABASE_NAME=10code_intranet
DATABASE_USER=postgres
DATABASE_HOST=db
DATABASE_PORT=5432
DATABASE_CONN_MAX_AGE=60

# Nota: DATABASE_PASSWORD se lee desde secrets/db_password.txt
# No incluir contraseñas directamente en .env

# ============================================================================
# REDIS & CELERY
# ============================================================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ============================================================================
# WEB SERVER
# ============================================================================
WEB_PORT=8000
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ============================================================================
# FRONTEND - VITE
# ============================================================================
VITE_DEV_SERVER_URL=http://localhost:5173
NODE_ENV=development

# ============================================================================
# CORS (Solo Desarrollo)
# ============================================================================
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:8000

# ============================================================================
# SECURITY (Producción)
# ============================================================================
# SECRET_KEY se lee desde secrets/django_secret_key.txt
# CSRF_TRUSTED_ORIGINS=https://intranet.10code.es
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

